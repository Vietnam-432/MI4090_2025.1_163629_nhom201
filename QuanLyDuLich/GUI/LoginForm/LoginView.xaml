<UserControl x:Class="QuanLyDuLich.GUI.LoginForm.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyDuLich.GUI.LoginForm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F0F2F5">

        <Border Background="White" 
                CornerRadius="15" 
                Padding="30"
                Width="320"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="Gray" Opacity="0.2" ShadowDepth="5"/>
            </Border.Effect>

            <StackPanel>

                <TextBlock Text="Chào mừng trở lại!" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"
                           Foreground="#333333"/>
                <TextBlock Text="Vui lòng đăng nhập để tiếp tục." 
                           FontSize="14" 
                           Foreground="Gray"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <TextBlock Text="Tên đăng nhập" FontWeight="Medium" Margin="0,0,0,5" Foreground="#555555"/>
                <TextBox x:Name="txtUsername" 
                         Padding="10" 
                         FontSize="10" 
                         BorderBrush="#E0E0E0"
                         BorderThickness="1" Height="Auto" FontWeight="Bold"/>

                <Separator Height="20" Opacity="0"/>

                <TextBlock Text="Mật khẩu" FontWeight="Medium" Margin="0,0,0,5" Foreground="#555555"/>
                <PasswordBox x:Name="txtPassword" 
                             Padding="10" 
                             FontSize="10" 
                             BorderBrush="#E0E0E0"
                             BorderThickness="1" Height="Auto" FontWeight="Bold"/>

                <Button x:Name="btnLogin"
                        Content="ĐĂNG NHẬP"
                        Margin="0,40,0,0"
                        Padding="12"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnLogin_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
