<UserControl x:Class="QuanLyDuLich.GUI.View.CRUView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyDuLich.GUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblTitle" Text="THÔNG TIN CHI TIẾT" 
                   FontSize="20" FontWeight="Bold" Foreground="#2C3E50" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainPanel" Orientation="Vertical"/>
        </ScrollViewer>

        <Button Grid.Row="2" Content="💾 LƯU LẠI" Click="BtnSave_Click"
                Background="#27AE60" Foreground="White" FontWeight="Bold"
                Padding="15,10" Margin="0,15,0,0" BorderThickness="0" Cursor="Hand"/>
    </Grid>
</UserControl>
