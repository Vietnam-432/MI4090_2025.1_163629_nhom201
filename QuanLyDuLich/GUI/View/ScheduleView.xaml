<UserControl x:Class="QuanLyDuLich.GUI.View.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ LỊCH TRÌNH &amp; PHÂN CÔNG GUIDE" 
                   FontSize="24" FontWeight="Bold" Foreground="#16A085" 
                   Margin="20,20,0,10"/>

        <!-- Thanh công cụ -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,20,10">
            <Button x:Name="btnAdd" Content="➕ Tạo Lịch Trình" Click="BtnAdd_Click"
                    Background="#3498DB" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>
            <Button x:Name="btnEdit" Content="✏️ Sửa / Phân Công" Click="BtnEdit_Click"
                    Background="#F39C12" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>
            <Button x:Name="btnDelete" Content="🗑️ Hủy Lịch" Click="BtnDelete_Click"
                    Background="#E74C3C" Foreground="White" Padding="15,8" BorderThickness="0"/>
        </StackPanel>

        <!-- Danh sách dữ liệu -->
        <DataGrid x:Name="dgData" Grid.Row="2" Margin="20,0,20,20"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal" Background="WhiteSmoke" RowHeaderWidth="0">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#ECF0F1"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <!-- Hiển thị ID Tour hoặc Tên Tour nếu có load Navigation Property -->
                <DataGridTextColumn Header="Mã Tour" Binding="{Binding TourId}" Width="100"/>

                <DataGridTextColumn Header="Ngày Đi" Binding="{Binding DeDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Ngày Về" Binding="{Binding ReDate, StringFormat=dd/MM/yyyy}" Width="120"/>

                <DataGridTextColumn Header="Số Khách" Binding="{Binding Booked}" Width="80"/>
                <DataGridTextColumn Header="Tối Đa" Binding="{Binding MaxCap}" Width="80"/>

                <!-- Cột hiển thị Hướng Dẫn Viên -->
                <DataGridTemplateColumn Header="Hướng Dẫn Viên (Guide)" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Hiển thị tên Guide nếu đã load, ngược lại hiện ID -->
                                <TextBlock Text="{Binding Guide.FullName, TargetNullValue='(Chưa phân công)'}" 
                                           FontWeight="Medium" Foreground="#2980B9"/>

                                <!-- TextBlock hiển thị ID Guide -->
                                <!-- Đã sửa lỗi: Dùng Style Trigger để ẩn hiện thay vì Converter gây crash -->
                                <TextBlock Text="{Binding GuideID, StringFormat=' [{0}]'}" 
                                           Foreground="Gray" FontStyle="Italic" Margin="5,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <!-- Ẩn nếu GuideID là null -->
                                                <DataTrigger Binding="{Binding GuideID}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <!-- Ẩn nếu GuideID là rỗng -->
                                                <DataTrigger Binding="{Binding GuideID}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridCheckBoxColumn Header="Đã Hủy" Binding="{Binding IsCancel}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>