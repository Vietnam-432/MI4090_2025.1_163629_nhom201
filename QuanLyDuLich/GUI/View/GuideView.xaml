<UserControl x:Class="QuanLyDuLich.GUI.View.GuideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="QUẢN LÝ HƯỚNG DẪN VIÊN" 
                   FontSize="24" FontWeight="Bold" Foreground="#2C3E50" 
                   Margin="20,20,0,10"/>

        <!-- Thanh công cụ -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,20,10">
            <!-- Tìm kiếm -->
            <!-- Đã sửa: Xóa PlaceholderText gây lỗi, dùng ToolTip thay thế -->
            <TextBox x:Name="txtSearch" Width="200" Padding="5" VerticalContentAlignment="Center" Margin="0,0,10,0" ToolTip="Nhập tên để tìm kiếm..."/>
            <Button Content="🔍 Tìm" Click="BtnSearch_Click" Background="#3498DB" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>
            <Button Content="🔄 Làm mới" Click="BtnRefresh_Click" Background="#95A5A6" Foreground="White" Padding="15,8" Margin="0,0,20,0" BorderThickness="0"/>

            <!-- Các nút chức năng -->
            <Button x:Name="btnAdd" Content="➕ Thêm Mới" Click="BtnAdd_Click"
                    Background="#2ECC71" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>
            <Button x:Name="btnEdit" Content="✏️ Chỉnh Sửa" Click="BtnEdit_Click"
                    Background="#F39C12" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>
            <Button x:Name="btnDelete" Content="🗑️ Xóa" Click="BtnDelete_Click"
                    Background="#E74C3C" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>

            <!-- Nút phân công Tour -->
            <Button x:Name="btnAssign" Content="📅 Phân công Tour" Click="BtnAssign_Click"
                    Background="#8E44AD" Foreground="White" Padding="15,8" BorderThickness="0"/>
        </StackPanel>

        <!-- Danh sách dữ liệu -->
        <DataGrid x:Name="dgGuides" Grid.Row="2" Margin="20,0,20,20"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal" Background="WhiteSmoke" RowHeaderWidth="0">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#ECF0F1"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HDV" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Họ và Tên" Binding="{Binding FullName}" Width="2*"/>
                <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNum}" Width="150"/>
                <DataGridTextColumn Header="Ngôn ngữ" Binding="{Binding Language}" Width="150"/>
                <DataGridTextColumn Header="Kinh nghiệm (Năm)" Binding="{Binding ExYears}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>