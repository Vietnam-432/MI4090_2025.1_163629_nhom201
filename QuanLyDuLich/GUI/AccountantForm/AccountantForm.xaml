<UserControl x:Class="QuanLyDuLich.GUI.AccountantForm.AccountantForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyDuLich.GUI.AccountantForm"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100">
    <UserControl.Resources>
        <!-- Khai báo Converter để kiểm soát logic của nút bấm -->
        <local:StatusToEnabledConverter x:Key="StatusToEnabledConverter"/>

        <!-- Style cho các nút bấm nghiệp vụ -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="White" Padding="25,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="💰 NGHIỆP VỤ KẾ TOÁN" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                    <Separator Width="1" Height="20" Margin="15,0" Background="#BDC3C7"/>
                    <TextBlock x:Name="lblAccountantName" Text="Nhân viên Kế toán" FontSize="18" VerticalAlignment="Center" Foreground="#3498DB"/>
                </StackPanel>

                <Button HorizontalAlignment="Right" Content="🚪 Đăng xuất" Click="BtnLogout_Click"
                        Padding="15,7" Background="Transparent" Foreground="#E74C3C" BorderBrush="#E74C3C" BorderThickness="1" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- NỘI DUNG CHÍNH (TABS) -->
        <TabControl Grid.Row="1" Margin="20" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="15" FontWeight="SemiBold" Padding="15,8"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- TAB 1: QUẢN LÝ THANH TOÁN & TRẠNG THÁI -->
            <TabItem Header="📑 Thu Tiền &amp; Trạng Thái">
                <Grid Background="White" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="20">
                        <TextBox x:Name="txtSearchBooking" Width="300" Padding="8" BorderBrush="#DCDDE1" 
                                 ToolTip="Nhập mã đơn hàng (ID)"/>
                        <Button Content="🔍 Tìm kiếm" Click="BtnSearchBooking_Click" Margin="10,0" Padding="20,0" 
                                Background="#3498DB" Foreground="White" BorderThickness="0"/>
                        <Button Content="🔄 Làm mới" Click="BtnRefresh_Click" Padding="15,0" 
                                Background="#95A5A6" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <DataGrid x:Name="dgBookings" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                              Margin="20,0,20,20" HeadersVisibility="Column" GridLinesVisibility="Horizontal" 
                              Background="White" RowHeaderWidth="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã Đơn" Binding="{Binding Id}" Width="100"/>
                            <DataGridTextColumn Header="Khách hàng" Binding="{Binding Customer.FullName}" Width="*"/>
                            <DataGridTextColumn Header="Ngày đặt" Binding="{Binding BookDate}" Width="140"/>
                            <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount, StringFormat=N0}" Width="120"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="110"/>

                            <DataGridTemplateColumn Header="Thao tác nghiệp vụ" Width="280">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Nút Thu tiền: Chỉ hiện khi chưa thanh toán -->
                                            <Button Content="💳 Thu tiền" Click="BtnCreatePayment_Click" 
                                                    Style="{StaticResource ActionButtonStyle}" Background="#2ECC71" Margin="0,0,8,0"
                                                    IsEnabled="{Binding Status, Converter={StaticResource StatusToEnabledConverter}}"/>

                                            <!-- Nút Sửa trạng thái: Dùng cho các đơn chưa ghi nhận/cần điều chỉnh -->
                                            <Button Content="⚙️ Sửa trạng thái" Click="BtnUpdateStatus_Click" 
                                                    Style="{StaticResource ActionButtonStyle}" Background="#F39C12"
                                                    IsEnabled="{Binding Status, Converter={StaticResource StatusToEnabledConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 2: HỆ THỐNG BÁO CÁO TÀI CHÍNH -->
            <TabItem Header="📊 Lập Báo Cáo Thống Kê">
                <Grid Background="White" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="20">
                        <TextBlock Text="Loại báo cáo:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="cbReportType" Width="180" Padding="5" Margin="0,0,20,0">
                            <ComboBoxItem Content="Báo cáo Doanh thu" IsSelected="True" Tag="BusinessOverview"/>
                            <ComboBoxItem Content="Báo cáo Tour" Tag="BestSellingTours"/>
                            <ComboBoxItem Content="Báo cáo Hướng dẫn viên" Tag="GuideReport"/>
                        </ComboBox>

                        <TextBlock Text="Kỳ báo cáo:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="cbTimeType" Width="120" Padding="5">
                            <ComboBoxItem Content="Theo ngày" Tag="Day"/>
                            <ComboBoxItem Content="Theo tháng" IsSelected="True" Tag="Month"/>
                            <ComboBoxItem Content="Theo quý" Tag="Quarter"/>
                            <ComboBoxItem Content="Theo năm" Tag="Year"/>
                        </ComboBox>

                        <TextBlock Text="Thời điểm:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <DatePicker x:Name="dpBaseTime" Width="150" Padding="5"/>

                        <Button Content="📈 Xuất Báo Cáo" Click="BtnLoadReport_Click" Margin="20,0" Padding="20,8" 
                                Background="#8E44AD" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>

                    <DataGrid x:Name="dgReport" Grid.Row="1" Margin="20,0,20,20" AutoGenerateColumns="True" 
                              IsReadOnly="True" Background="#F9F9F9" RowHeaderWidth="0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#34495E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>

                    <Border Grid.Row="2" Background="#F1C40F" Padding="15" Margin="20,0,20,20" CornerRadius="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock x:Name="lblSummaryTitle" Text="TỔNG HỢP DOANH THU: " FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="lblTotalRevenue" Text="0 VNĐ" FontWeight="Bold" FontSize="18" Foreground="#C0392B" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- TAB 3: TÀI KHOẢN -->
            <TabItem Header="👤 Hồ Sơ Cá Nhân">
                <Border Background="White" Margin="0,10,0,0" Padding="40">
                    <StackPanel MaxWidth="500" HorizontalAlignment="Left">
                        <TextBlock Text="THÔNG TIN TÀI KHOẢN KẾ TOÁN" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2C3E50"/>

                        <Label Content="Tên đăng nhập:"/>
                        <TextBox x:Name="txtUsername" IsReadOnly="True" Background="#F1F2F6" Padding="8" Margin="0,0,0,15" FontWeight="Bold"/>

                        <Label Content="Đổi mật khẩu mới:"/>
                        <PasswordBox x:Name="pbPassword" Padding="8" Margin="0,0,0,25"/>

                        <Button Content="LƯU THAY ĐỔI" Click="BtnUpdateProfile_Click" Padding="0,12" 
                                Background="#3498DB" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>